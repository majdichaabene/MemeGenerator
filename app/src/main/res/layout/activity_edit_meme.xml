<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".ui.activity.EditMemeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_meme_container_lay">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:id="@+id/meme_edit_img"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@color/transparent_light_gray">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/back_btn"
            android:background="@color/transparent"
            android:src="@mipmap/ic_close"
            android:layout_gravity="left"/>

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textColor="@color/white"
            android:background="@color/transparent"
            android:id="@+id/cancel_btn"
            android:layout_gravity="left"/>

        <Button
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="done"
            android:background="@color/transparent"
            android:id="@+id/done_btn"
            android:layout_gravity="right"/>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/export_panel_container_lay"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_save"
                android:id="@+id/save_btn"/>

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_share"
                android:id="@+id/share_btn"/>

        </LinearLayout>


    </FrameLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/edit_panel_container_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent_light_gray">



        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/transparent"
            android:layout_gravity="left"
            android:src="@mipmap/ic_clear"
            android:id="@+id/clear_btn"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_plus"
                android:id="@+id/increase_btn"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_minus"
                android:id="@+id/decrease_btn"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_font"
                android:id="@+id/font_btn"/>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"
                android:src="@mipmap/ic_color"
                android:id="@+id/color_btn"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>